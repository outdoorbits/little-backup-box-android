<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.LbbScanner" parent="Theme.Material3.DayNight.NoActionBar">
 		<item name="colorPrimary">@color/colorGrey</item>
 		<item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
		<item name="colorOnPrimary">@color/colorWhite</item>
		<item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
		<item name="colorSecondary">@color/colorSecondary</item>
		<item name="colorOnSecondary">@color/colorBlack</item>
		<item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariant</item>
		<item name="android:windowBackground">@color/colorPrimaryContainer</item>
		<item name="android:textColor">@color/primary_text</item>
		<item name="android:textColorLink">@color/links</item>
		<item name="toolbarStyle">@style/Widget.LbbScanner.Toolbar</item>
	</style>

	<style name="Widget.LbbScanner.Toolbar" parent="Widget.Material3.Toolbar">
		<item name="android:background">@color/colorWhite</item>
		<item name="titleTextColor">?attr/colorOnPrimary</item>
		<item name="subtitleTextColor">?attr/colorOnPrimary</item>
		<item name="navigationIconTint">?attr/colorOnPrimary</item>
	</style>

	<style name="ToolbarPopupTheme" parent="ThemeOverlay.Material3.Light">
		<item name="colorOnSurface">@color/colorWhite</item>
	</style>

	<style name="Widget.LbbScanner.Button.3D" parent="Widget.Material3.Button">
		<item name="android:elevation">8dp</item>
		<item name="android:translationZ">4dp</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>
