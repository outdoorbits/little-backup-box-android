<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp">

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Web Resources"
			android:textStyle="bold"
			android:textSize="20sp"
			android:textColor="@color/primary_text"
			android:paddingBottom="8dp"/>

		<TextView
			android:id="@+id/resource_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:autoLink="web"
			android:textIsSelectable="true"
            android:lineSpacingExtra="4dp"
			android:textAppearance="@style/AppLinkStyle"
			android:text="• https://github.com/outdoorbits/little-backup-box\n• https://github.com/outdoorbits/little-backup-box/wiki" />
	</LinearLayout>
</ScrollView>
